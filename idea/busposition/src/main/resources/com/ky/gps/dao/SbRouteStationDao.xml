<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ky.gps.dao.SbRouteStationDao">
    <resultMap id="BaseSbRouteStationMap" type="com.ky.gps.entity.SbRouteStation">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="sb__id" jdbcType="INTEGER" property="sbStation.id"/>
        <result column="sb__id2" jdbcType="INTEGER" property="sbRoute.id"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="remark1" jdbcType="VARCHAR" property="remark1"/>
        <result column="remark2" jdbcType="VARCHAR" property="remark2"/>
        <result column="remark3" jdbcType="VARCHAR" property="remark3"/>
        <result column="created_date" jdbcType="TIMESTAMP" property="createdDate"/>
        <result column="created_by" jdbcType="VARCHAR" property="createdBy"/>
        <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate"/>
        <result column="updated_by" jdbcType="VARCHAR" property="updatedBy"/>
        <result column="valid" jdbcType="TINYINT" property="valid"/>
    </resultMap>
    <select id="findStationByRouteId" resultType="java.util.Map" parameterType="integer">
        SELECT ss.SBS_STATION stationName, ss.SBS_LONGITUDE longtidue, ss.SBS_LATITUDE latitude, ss.SBS_DEPART_TIME departTime
        FROM sb_route_station srs
                 LEFT JOIN sb_route sr ON srs.SB__ID2=sr.ID
                 LEFT JOIN sb_station ss ON srs.SB__ID=ss.ID
        WHERE sr.ID=#{routeId}
    </select>
</mapper>